---
// src/layouts/BaseLayout.astro
const {
  title = "NuevaHome | Tu nuevo hogar, a un clic de distancia.",
  description = "Cumplimos tu sue√±o de hogar con lujo y seguridad absoluta.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={title} />
    <meta name="keywords" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.png" />

    <!-- Open Graph (Facebook, LinkedIn, WhatsApp, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://nuevahome.com/logo-nuevahome.png" />
    <meta property="og:url" content="https://nuevahome.com" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://nuevahome.com/logo-nuevahome.png" />
  </head>

  <body>
    <slot />
  </body>
</html>
