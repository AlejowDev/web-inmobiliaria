---
// Importa el archivo de fuentes
import "../../styles/global.css";
---

<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-20"
  >
    <!-- Logo + Texto -->
    <a
      href="/"
      class="flex items-center gap-2 md:gap-3 lg:gap-4 select-none transition-transform duration-300 ease-in-out hover:scale-105"
    >
      <img
        src="/logo.png"
        alt="Nueva Home"
        class="h-8 md:h-10 lg:h-12 w-auto transition-transform duration-300"
      />
      <p
        class="text-lg md:text-xl lg:text-2xl font-semibold text-black whitespace-nowrap transition-transform duration-300"
        style="font-family: 'Orbitron', sans-serif;color:rgba(0, 0, 0, 0.749);"
      >
        NUEVA HOME
      </p>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex gap-10 items-center text-sm font-medium">
      <a href="/conocenos" class="relative text-black group">
        <span
          class="transition-colors duration-300 font-semibold group-hover:text-[#4F89B6]"
          >CONOCENOS</span
        >
        <span
          class="absolute left-0 bottom-0 w-0 h-0.5 bg-[#4F89B6] group-hover:w-full transition-all duration-500"
        ></span>
      </a>

      <a href="/blog" class="relative text-black group">
        <span
          class="transition-colors duration-300 font-semibold group-hover:text-[#4F89B6]"
          >BLOG</span
        >
        <span
          class="absolute left-0 bottom-0 w-0 h-0.5 font-semibold bg-[#4F89B6] group-hover:w-full transition-all duration-500"
        ></span>
      </a>

      <a href="/proyectos" class="relative text-black group">
        <span
          class="transition-colors duration-300 font-semibold group-hover:text-[#4F89B6]"
          >PROYECTOS</span
        >
        <span
          class="absolute left-0 bottom-0 w-0 h-0.5 bg-[#4F89B6] group-hover:w-full transition-all duration-500"
        ></span>
      </a>

      <a
        href="/ingresar"
        class="px-5 py-2 bg-[#4F89B6] text-white font-semibold border border-[#4F89B6] rounded-full transition-all duration-500 ease-in-out hover:bg-white hover:text-[#4F89B6] hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-[#4F89B6]/50"
      >
        INGRESAR
      </a>
    </div>

    <!-- Mobile Menu Toggle -->
    <div class="md:hidden">
      <input id="menu-toggle" type="checkbox" class="hidden peer" />
      <label for="menu-toggle" class="cursor-pointer">
        <svg
          class="w-7 h-7 text-gray-700"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>

      <label
        for="menu-toggle"
        class="fixed inset-0 bg-black/30 backdrop-blur-sm z-40 hidden peer-checked:block transition-opacity"
      ></label>

      <div
        class="fixed top-0 right-0 w-[75vw] max-w-sm h-full bg-white z-50 shadow-lg transform translate-x-full peer-checked:translate-x-0 transition-transform duration-300 ease-in-out rounded-l-2xl p-8 space-y-6"
      >
        <div class="flex justify-center">
          <a href="/" class="hover:scale-105 transition-transform duration-500">
            <img src="/logo.png" alt="Nueva Home" class="h-30" />
          </a>
        </div>
        <p
          class="text-lg md:text-xl lg:text-2xl text-center font-semibold text-black whitespace-nowrap transition-transform duration-300"
          style="font-family: 'Orbitron', sans-serif;color:rgba(0, 0, 0, 0.749);margin-top:-10px;"
        >
          NUEVA HOME
        </p>
        <hr class="border-gray-300" />

        <a
          href="/conocenos"
          class="block text-gray-800 hover:text-[#4F89B6] transition-colors duration-300 text-center"
          >Con√≥cenos</a
        >
        <a
          href="/blog"
          class="block text-gray-800 hover:text-[#4F89B6] transition-colors duration-300 text-center"
          >Blog</a
        >
        <a
          href="/proyectos"
          class="block text-gray-800 hover:text-[#4F89B6] transition-colors duration-300 text-center"
          >Proyectos</a
        >
        <a
          href="/ingresar"
          class="block mt-4 px-5 py-2 bg-[#4F89B6] text-white border border-[#4F89B6] rounded-full text-center transition-all duration-500 ease-in-out hover:bg-white hover:text-[#4F89B6] hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-[#4F89B6]/50"
        >
          INGRESAR
        </a>
        <hr class="border-gray-300" />
      </div>
    </div>
  </div>
</nav>
